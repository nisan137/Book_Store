<Page
    x:Class="BookStoreUi.PurchaseItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookStoreUi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/BookQout.png" Opacity="0.7"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Purchase succeed! Have a lovely day! :)" FontSize="70"
                   FontFamily="Gabriola" FontWeight="Bold" Foreground="#FF45137B" HorizontalTextAlignment="Center"  TextDecorations="Underline" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="30" CenterX="200"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button x:ConnectionId='2' Name="BackBtn" Grid.Row="1" Content="Back To Main Menu" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontFamily="Gabriola"
                FontSize="60" Foreground="AntiqueWhite" Background="#7F62D4F1"                     />
        <Button x:ConnectionId='3' Name="ExitBtn" Grid.Row="1" Content="Exit" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,130,0,0" FontFamily="Gabriola"
                FontSize="60" Foreground="AntiqueWhite" Background="#7F62D4F1"                      Height="90" Width="120"/>

    </Grid>
</Page>

