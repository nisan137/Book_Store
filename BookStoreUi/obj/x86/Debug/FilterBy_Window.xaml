<Page
    x:Class="BookStoreUi.FilterBy_Window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookStoreUi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/backgrondBook.png" Opacity="0.8"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='2' Name="FilterByTbl" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="70" FontFamily="Gabriola" FontWeight="Bold"/>
        <Button x:ConnectionId='3' Name="BackBtn" Grid.Row="4" Content="Back To Main Menu" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Gabriola"
                FontSize="60" Foreground="Black" Background="#7F62D4F1" Height="80"                     />
        <Button x:ConnectionId='4' Name="ExitBtn" Grid.Row="4" Content="Exit" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,130,0,0" FontFamily="Gabriola"
                FontSize="60" Foreground="Black" Background="#7F62D4F1"                      VerticalContentAlignment="Bottom" Height="70" Width="120"/>
    </Grid>
</Page>

