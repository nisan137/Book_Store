<Page
    x:Class="BookStoreUi.StoreIntro"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookStoreUi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/backgrondBook.png" Opacity="1"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="1.3*" />
            <RowDefinition/>
            <RowDefinition Height="1.3*" />
            <RowDefinition/>
            <RowDefinition Height="1.3*" />
            <RowDefinition/>
            <RowDefinition Height="1.3*" />
            <RowDefinition/>
            <RowDefinition Height="1.3*" />
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <MenuBar x:ConnectionId='2'  x:Name="FilterMenuBar" Grid.Column="5" HorizontalAlignment="Center" FontSize="35" Background="#FFF9F9F9"
                  VerticalAlignment="Center" Width="70" Height="25" >
            <MenuBarItem Title="Filter By" FontFamily="Gabriola" FontSize="12" FontWeight="Bold">
                <MenuFlyoutItem x:ConnectionId='44' Name="FilterAuthor" Text="Filter by Author" FontFamily="Gabriola"                              />
                <MenuFlyoutItem x:ConnectionId='45' Name="FilterPrice" Text="Filter by Price" FontFamily="Gabriola"                             />
                <MenuFlyoutItem x:ConnectionId='46' Name="FilterType" Text="Filter by Item Type" FontFamily="Gabriola"                              />
            </MenuBarItem>
        </MenuBar>
        <TextBlock Grid.Row="1" Text="Popular in Store" Foreground="AntiqueWhite" FontSize="30" FontFamily="Gabriola" HorizontalAlignment="Center"
                   VerticalAlignment="Top" FontWeight="Bold" TextDecorations="Underline" Margin="0,15,0,0"/>

        <Button x:ConnectionId='3' Name="ViewMorePopularBtn" Grid.Row="2" Grid.Column="4" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="AntiqueWhite" FontSize="30" FontFamily="Gabriola"
                Content="view more.." VerticalContentAlignment="Bottom" Margin="0,40,0,0" BorderThickness="1,1,1,1" Background="#59000000" Width="193"                          />

        <TextBlock Grid.Row="3" Text="Fantasy Books" Foreground="AntiqueWhite" FontSize="30" FontFamily="Gabriola" HorizontalAlignment="Center"
                   VerticalAlignment="Top" FontWeight="Bold" TextDecorations="Underline" Margin="0,15,0,0"/>
        <Button x:ConnectionId='4' Name="TheAlchemistBtn" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                              >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/TheAlchemist.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='5' Name="TheAlchemistPriceTbl" Grid.Row="4" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="60$" Foreground="AntiqueWhite"  FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="20" FocusVisualSecondaryBrush="#99000000" FontWeight="Bold"/>
        <Button x:ConnectionId='6' Name="ShadowAndBoneBtn" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/ShadowAndBone.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='7' Name="ShadowAndBonePriceTbl" Grid.Row="4" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="72$" Foreground="AntiqueWhite" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="20" FontWeight="Bold"/>
        <Button x:ConnectionId='8' Name="HobbitBtn" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/Hobbit.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='9' Name="HobbitPriceTbl" Grid.Row="4" Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="58$" Foreground="AntiqueWhite" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="20" FontWeight="Bold"/>
        <Button x:ConnectionId='10' Name="HarryPotterFirstBtn" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/HarryPotter1.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='11' Name="HarryPotterFirstPriceTbl" Grid.Row="4" Grid.Column="3" VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="70$" Foreground="AntiqueWhite" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="20" FontWeight="Bold"/>
        <Button x:ConnectionId='12' Name="ViewMoreFantasyBtn" Grid.Row="4" Grid.Column="4" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="AntiqueWhite" FontSize="30" FontFamily="Gabriola"
                Content="view more.." VerticalContentAlignment="Bottom" Margin="0,40,0,0" BorderThickness="1,1,1,1" Background="#59000000" Width="193"                          />

        <TextBlock Grid.Row="5" Text="Kids Books" Foreground="AntiqueWhite" FontSize="30" FontFamily="Gabriola" HorizontalAlignment="Center"
                   VerticalAlignment="Top" FontWeight="Bold" TextDecorations="Underline" Margin="0,15,0,0" />
        <Button x:ConnectionId='13' Name="PaddingtonBtn" Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/BearPaddington.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='14' Name="PaddingtonPriceTbl" Grid.Row="6" VerticalAlignment="Top" HorizontalAlignment="Center" Text="33$" Foreground="Black" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="16" FontWeight="Bold"/>
        <Button x:ConnectionId='15' Name="DrSeussBtn" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" FontSize="16" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/DrSeuss.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='16' Name="DrSeussPriceTbl" Grid.Row="6" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Text="25$" 
                   Foreground="Black" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" TextReadingOrder="Default" 
                   UseLayoutRounding="True" Margin="0,66,0,0" FontSize="20" FontWeight="Bold"/>
        <Button x:ConnectionId='17' Name="JamesAndThePeachBtn" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" FontSize="16" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/JamesAndTheGiantPeach.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='18' Name="JamesAndThePeachPriceTbl" Grid.Row="6" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Center" Text="48$" Foreground="Black" FontFamily="Gabriola" TextLineBounds="TrimToBaseline"  
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="16" FontWeight="Bold"/>
        <Button x:ConnectionId='19' Name="PeterPanBtn" Grid.Row="6" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="70" FontSize="16" BorderBrush="Black"                              Margin="0,0,0,5">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/PeterPan.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='20' Name="PeterPanTbl" Grid.Row="6" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Center" Text="34$" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="16" FontWeight="Bold"/>
        <Button x:ConnectionId='21' Name="ViewMoreKidsBtn" Grid.Row="6" Grid.Column="4" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="AntiqueWhite" FontSize="30" FontFamily="Gabriola"
                Content="view more.." VerticalContentAlignment="Bottom" Margin="0,40,0,0" BorderThickness="1,1,1,1" Background="#59000000" Width="193"                         />

        <TextBlock Grid.Row="7" Text="Novels Books" Foreground="AntiqueWhite" FontSize="30" FontFamily="Gabriola" HorizontalAlignment="Center"
                   VerticalAlignment="Top" FontWeight="Bold" TextDecorations="Underline" Margin="0,10,0,0"/>
        <Button x:ConnectionId='22' Name="LittleHouseBtn" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/LittleHouse.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='23' Name="LittleHousePriceTbl" Grid.Row="8" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center" Text="60$" Foreground="AntiqueWhite"  FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="16" FontWeight="Bold"/>
        <Button x:ConnectionId='24' Name="GoneWithTheWindBtn" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/GoneWithTheWind.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='25' Name="GoneWithTheWindPriceTbl" Grid.Row="8" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Text="82$" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="16" FontWeight="Bold"/>
        <Button x:ConnectionId='26' Name="RobinsonCrusoeBtn" Grid.Row="8" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/RobinsonCrusoe.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='27' Name="RobinsonCrusoePriceTbl" Grid.Row="8" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Center" Text="61$" Foreground="White" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="16" FontWeight="Bold"/>
        <Button x:ConnectionId='28' Name="TheGreatestGatsbyBtn" Grid.Row="8" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/TheGreatGatsby.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='29' Name="TheGreatestGatsbyPriceTbl" Grid.Row="8" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Center" Text="43$" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="16" FontWeight="Bold" Foreground="Black"/>
        <Button x:ConnectionId='30' Name="ViewMoreNovelsBtn" Grid.Row="8" Grid.Column="4" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="AntiqueWhite" FontSize="30" FontFamily="Gabriola"
                Content="view more.." VerticalContentAlignment="Bottom" Margin="0,40,0,0" BorderThickness="1,1,1,1" Background="#59000000" Width="193"                          />

        <TextBlock Grid.Row="9" Text="Journals" Foreground="AntiqueWhite" FontSize="30" FontFamily="Gabriola" HorizontalAlignment="Center"
                   VerticalAlignment="Top" FontWeight="Bold" TextDecorations="Underline" Margin="0,15,0,0"/>
        <Button x:ConnectionId='31' Name="GqMagazineBtn" Grid.Row="10" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/GqMagazine.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='32' Name="GqMagazinePriceTbl" Grid.Row="10" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center" Text="60$" Foreground="AntiqueWhite"  FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="16" FontWeight="Bold"/>
        <Button x:ConnectionId='33' Name="ForbsMagazineBtn" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/ForbsMagazine.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='34' Name="ForbsMagazinePriceTbl" Grid.Row="10" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Text="82$" Foreground="AntiqueWhite" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="16" FontWeight="Bold"/>
        <Button x:ConnectionId='35' Name="ScientificAmericanMagazineBtn" Grid.Row="10" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/ScientificAmericanMagazine.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='36' Name="ScientificAmericanMagazinePriceTbl" Grid.Row="10" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Center" Text="61$" Foreground="AntiqueWhite" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="16" FontWeight="Bold"/>
        <Button x:ConnectionId='37' Name="VogueMagazineBtn" Grid.Row="10" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="85" BorderBrush="Black"                             >
            <Button.Background>
                <ImageBrush ImageSource="/Assets/Vogue.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='38' Name="VogueMagazinePriceTbl" Grid.Row="10" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Center" Text="43$" Foreground="Black" FontFamily="Gabriola" TextLineBounds="TrimToBaseline" OpticalMarginAlignment="None" 
                   TextReadingOrder="Default" UseLayoutRounding="True" Margin="0,66,0,0" FontSize="16" FontWeight="Bold"/>

        <Button x:ConnectionId='39' Name="ViewMoreJournalsBtn" Grid.Row="10" Grid.Column="4" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="AntiqueWhite" FontSize="30" FontFamily="Gabriola"
                Content="view more.." VerticalContentAlignment="Bottom" Margin="0,40,0,0" BorderThickness="1,1,1,1" Background="#59000000" Width="193"                          />

        <Button x:ConnectionId='40' Name="ViewAllBtn" Grid.Row="12" HorizontalAlignment="Center" Content="View All Items" Foreground="AntiqueWhite" FontSize="40" FontFamily="Gabriola"
                HorizontalContentAlignment="Center" VerticalContentAlignment="center" BorderBrush="FloralWhite" BorderThickness="1,1,1,1" Background="#59000000"                         />
        <Button x:ConnectionId='41' Name="ExitBtn" Grid.Row="12" Grid.Column="5" HorizontalAlignment="Center" Content="Exit" Foreground="AntiqueWhite" FontSize="35" FontFamily="Gabriola"
                HorizontalContentAlignment="Center" VerticalContentAlignment="center" BorderBrush="FloralWhite" BorderThickness="1,1,1,1" Background="#59000000" Width="193"                      />
        <Button x:ConnectionId='42' Name="EditInventoryBtn" Grid.Row="11" Grid.Column="5" HorizontalAlignment="Center" Content="Edit Inventory" Foreground="AntiqueWhite" FontSize="35" FontFamily="Gabriola"
                HorizontalContentAlignment="Center" VerticalContentAlignment="center" BorderBrush="FloralWhite" BorderThickness="1,1,1,1" Background="#59000000" Width="193"                               />
        <Button x:ConnectionId='43' Name="ProduceReportBtn" Grid.Row="10" Grid.Column="5" HorizontalAlignment="Center" Content="Produce Reports" Foreground="AntiqueWhite" FontSize="35" FontFamily="Gabriola"
                HorizontalContentAlignment="Center" VerticalContentAlignment="center" BorderBrush="FloralWhite" BorderThickness="1,1,1,1" Background="#59000000" Width="193"                                />

    </Grid>
</Page>

